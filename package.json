{
    "private": true,
    "workspaces": {
        "packages": [
            "addons/shared/*/*",
            "packages/pyradic/platform",
            "packages/@pyro-*"
        ]
    },
    "scripts": {
        "build:dev": "NODE_ENV=development webpack --config webpack.config.ts",
        "build-tools": "cd packages/@pyro-build-tools && yarn",
        "admin-theme": "cd addons/shared/pyro/admin-theme && yarn",
        "packages:watch": "concurrently \"yarn build-tools watch\""
    },
    "devDependencies": {
        "concurrently": "^4.1.2",
        "npm-run-all": "^4.1.5",
        "@pyro/build-tools": "1.0.0",
        "@types/node": "^12.7.8",
        "webpack": "^4.40.2",
        "webpack-cli": "^3.3.8",
        "webpack-dev-server": "^3.8.0"
    }
}
